rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Products collection
    match /products/{productId} {
      // Anyone can read published products
      allow read: if resource.data.published == true;
      
      // Only authenticated admins can write
      // TODO: Replace with proper admin role check once Firebase Auth is implemented
      allow write: if false;  // Secure - use Firebase Console or Admin SDK for updates
    }
    
    // Future: Add other collections here
    // match /categories/{categoryId} { ... }
    // match /analytics/{docId} { ... }
  }
}
